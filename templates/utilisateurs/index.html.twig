{% extends 'base.html.twig' %}

{% block title %}Liste Utilisateurs{% endblock %}

{% block sous_header %}
        <nav style="background-color: #e3f2fd; !important" class="navbar navbar-expand-lg navbar-light">
            <h3 class="text-dark">Liste Utilisateurs</h3>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="btn btn-outline-dark" href="{{ path('utilisateurs_new') }}">
                            <i class="fa fa-plus"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}
{% block body %}
    
 
    <table class="table table-striped">
		<thead class="thead-dark">
            <tr>
                
                <th>Nom</th>
                <th>Prenom</th>
                <th>Matricule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.matricule }}</td>
                <td>
                
                <a class="btn btn-dark" href="{{ path('utilisateurs_show', {'id': utilisateur.id}) }}">
						<i class="fa fa-eye"></i>
					</a>  
                    <a class="btn btn-warning" href="{{ path('utilisateurs_edit', {'id': utilisateur.id}) }}">
						<i class="fa fa-edit"></i>
					</a>  
        
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvÃ©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    	<div class="pagination justify-content-end" style="margin:2%">
		{{ knp_pagination_render(utilisateurs) }}
	</div>

{% endblock %}
