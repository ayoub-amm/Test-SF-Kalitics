{% extends 'base.html.twig' %}

{% block title %}Liste des Pointages
{% endblock %}
 {% block sous_header %}
        <nav style="background-color: #e3f2fd; !important" class="navbar navbar-expand-lg navbar-light">
            <h3 class="text-dark">Liste des Pointages</h3>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="btn btn-outline-dark" href="{{ path('pointages_new') }}">
                            <i class="fa fa-plus"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}
{% block body %}

   
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
                <th>Nom</th>
                <th>Chantier</th>
				<th>Date</th>
				<th>Durée</th>
			</tr>
		</thead>
		<tbody>
			{% for pointage in pointages %}
				<tr>
					<td>{{ pointage.Utilisateur.nom ~' '~ pointage.Utilisateur.prenom }}</td>
					<td>{{ pointage.Chantier.nom }}</td>
					<td>{{ pointage.date ? pointage.date|date('Y-m-d') : '' }}</td>
					<td>{{ pointage.duree }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
	<div class="pagination justify-content-end" style="margin:2%">
		{{ knp_pagination_render(pointages) }}
	</div>
{% endblock %}
